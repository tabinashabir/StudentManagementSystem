@model IEnumerable<StudentManagementSystem.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Enrollments</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Enrollments" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Enrollment
            </a>
        </div>
    </div>
    <br />
    <br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Course Title
                </th>
                <th>
                    Student Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Course.Title
                        @*@Html.DisplayFor(modelItem => item.Course.Title)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.FirstName)
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Enrollments" asp-action="Edit" asp-route-id="@item.EnrollmentID"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Enrollments" asp-action="Details" asp-route-id="@item.EnrollmentID"
                            class="btn btn-danger mx-2"> <i class="bi bi-arrow-up-left-square-fill"></i> Details</a>
                            <a asp-controller="Enrollments" asp-action="Delete" asp-route-id="@item.EnrollmentID"
                            class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>