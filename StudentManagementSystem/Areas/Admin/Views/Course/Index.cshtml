@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Course List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Course
            </a>
        </div>
    </div>
    <br />
    <br /> 
    <div class="table-responsive">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Course Title
                    </th>
                    <th>
                        Course Duration
                    </th>
                    <th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">
                            @obj.Title 
                        </td>
                        <td width="30%">
                            @obj.Duration
                        </td>
                         <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Course" asp-action="Edit" asp-route-id="@obj.CourseID"
                                class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="Course" asp-action="Details" asp-route-id="@obj.CourseID"
                                class="btn btn-info mx-2"> <i class="bi bi-arrow-up-left-square-fill"></i> Details</a>
                                <a asp-controller="Course" asp-action="Delete" asp-route-id="@obj.CourseID"
                                class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					        </div>
				        </td>
			
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

