@model Enrollment

@{
    ViewData["Title"] = "Delete";
}
    
<form method="post" asp-action="Delete">
	<input asp-for="CourseID" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Course</h2>
			<h3>Are you sure you want to delete this?</h3>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Course"></label>
			<input asp-for="Course.Title" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Student"></label>
			<input asp-for="Student.FirstName" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Course" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}